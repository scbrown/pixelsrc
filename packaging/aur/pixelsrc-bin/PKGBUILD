# Maintainer: Your Name <your.email@example.com>
pkgname=pixelsrc-bin
pkgver=0.1.0
pkgrel=1
pkgdesc='GenAI-native pixel art format and compiler (prebuilt binary)'
arch=('x86_64' 'aarch64')
url='https://github.com/OWNER/pixelsrc'
license=('MIT')
depends=('gcc-libs')
provides=('pixelsrc')
conflicts=('pixelsrc')
source_x86_64=("$url/releases/download/v$pkgver/pixelsrc-linux-x86_64"
               "$url/releases/download/v$pkgver/pixelsrc-linux-x86_64.sha256")
source_aarch64=("$url/releases/download/v$pkgver/pixelsrc-linux-aarch64"
                "$url/releases/download/v$pkgver/pixelsrc-linux-aarch64.sha256")
sha256sums_x86_64=('SKIP' 'SKIP')
sha256sums_aarch64=('SKIP' 'SKIP')

package() {
    case "$CARCH" in
        x86_64)
            install -Dm0755 "pixelsrc-linux-x86_64" "$pkgdir/usr/bin/pxl"
            ;;
        aarch64)
            install -Dm0755 "pixelsrc-linux-aarch64" "$pkgdir/usr/bin/pxl"
            ;;
    esac
}
